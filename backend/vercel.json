{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "API_KEY": "@api_key",
    "ALLOWED_ORIGINS": "@allowed_origins"
  },
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  }
}